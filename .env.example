# ==========================================
# Go Version
# ==========================================
GO_VERSION=1.25

# ==========================================
# PostgreSQL
# ==========================================
POSTGRES_VERSION=18
POSTGRES_NAME=my_app_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
# Connection Pool Settings
POSTGRES_MAX_OPEN_CONNS=25
POSTGRES_MAX_IDLE_CONNS=5

# Production: Data Path for Bind Mount
POSTGRES_DATA_PATH=/srv/postgresql/data
# ==========================================


# ==========================================
# Volume Names (Centralized)
# ==========================================
# Development Volumes
VOLUME_POSTGRES=postgres-data
VOLUME_LOKI=loki-data
VOLUME_GRAFANA=grafana-data

# Production Volumes (different names to avoid conflicts)
VOLUME_POSTGRES_PROD=prod_postgres_data
VOLUME_LOKI_PROD=prod_loki_data
VOLUME_GRAFANA_PROD=prod_grafana_data


# ==========================================
# Network Names (Centralized)
# ==========================================
# Development Networks
NETWORK_FRONTEND=frontend
NETWORK_BACKEND=backend

# Production Networks
NETWORK_FRONTEND_PROD=prod_frontend
NETWORK_BACKEND_PROD=prod_backend


# ==========================================
# Container Names (Development only!)
# ==========================================
# Note: Don't use container_name in production!
CONTAINER_POSTGRES=postgres-dev
CONTAINER_GATEWAY=gateway-dev
CONTAINER_SERVICE_A=service-a-dev
CONTAINER_SERVICE_B=service-b-dev
CONTAINER_MIGRATOR=db-migrator
CONTAINER_LOKI=loki-dev
CONTAINER_PROMTAIL=promtail-dev
CONTAINER_GRAFANA=grafana-dev


# ==========================================
# Application Configuration
# ==========================================
# Ports (Development)
PORT_GATEWAY=8080
PORT_POSTGRES=5432
PORT_GRAFANA=3000
PORT_LOKI=3100

# Production: No external ports for services (only nginx)
PORT_NGINX_HTTP=80
PORT_NGINX_HTTPS=443


# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=info



# ==========================================
# Security (Production)
# ==========================================
DB_SSLMODE_DEV=disable
DB_SSLMODE_PROD=require


# ==========================================
# Grafana (Logging UI)
# ==========================================
# Default: admin/admin for development
# Production: Set a strong password here
GRAFANA_ADMIN_PASSWORD=admin
# ==========================================


# ==========================================
# Loki (Log Storage)
# ==========================================
# Log retention period (in hours)
# 168h = 7 days (dev), 2160h = 90 days (prod)
LOKI_RETENTION_HOURS=168

# ==========================================
# Miscellaneous
# ==========================================
USE_CLOUDFLARE=false


# ==========================================
# Notes
# ==========================================
# - Development uses VOLUME_POSTGRES, Production uses VOLUME_POSTGRES_PROD
# - Networks are separate: dev uses NETWORK_*, prod uses NETWORK_*_PROD
# - Container names only in development (not in production)
# - Change POSTGRES_PASSWORD before deploying to production!